@model HelpdeskSystem.ViewModels.TicketSubCategoryViewModel

@{
    ViewData["Title"] = "Index";
}
<form asp-action="Index" method="get" class="mb-3">
    <input type="hidden" asp-for="CategoryId" />
    <div class="row">
        <div class="col-md-3">
            <label>Código</label>
            <input asp-for="Code" class="form-control" />
        </div>
        <div class="col-md-3">
            <label>Nome</label>
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="col-md-3 mt-4">
            <button type="submit" class="btn btn-primary mt-2">Filtrar</button>
            <a asp-action="Index" asp-route-id="@Model.CategoryId" class="btn btn-secondary mt-2">Limpar</a>
        </div>
    </div>
</form>

<p>
    <a class="btn btn-dark" asp-action="Create" asp-route-id="@Model.CategoryId">Nova Sub-Categoria</a>
</p>
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Sub-Categorias: </h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.CategoryId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Code)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        Criado Por
                    </th>
                    <th>
                        Criado Em
                    </th>
                    <th>Editar</th>
                    <th>Visualizar</th>
                    <th>Apagar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.TicketSubCategories)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CategoryId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Code)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreatedBy.FullName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreatedOn)
                        </td>
                        <td>
                            <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                        </td>
                        <td>
                            <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
                        </td>
                        <td>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Apagar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>