@model HelpdeskSystem.Models.OS

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes</h1>

<div>
    <h4>Ordem de Serviço</h4>
    <hr />
    <div class="row">
        <table class="table"
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Titulo)
                </th>
                <td>
                    @Html.DisplayFor(model => model.Titulo)
                </td>

                <th>
                    @Html.DisplayNameFor(model => model.Descricao)
                </th>
                <td>
                    @Html.DisplayFor(model => model.Descricao)
                </td>
            </tr>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <td>
                    @Html.DisplayFor(model => model.Status)
                </td>

                <th>
                    @Html.DisplayNameFor(model => model.Prioridade)
                </th>
                <td>
                    @Html.DisplayFor(model => model.Prioridade)
                </td>
            </tr>
            <tr>
               <th>
                    @Html.DisplayNameFor(model => model.CriadoPor)
                </th>
                <td>
                    @Html.DisplayFor(model => model.CriadoPor.FullName)
                </td>

                <th>
                    @Html.DisplayNameFor(model => model.CriadoEm)
                </th>
                <td>
                    @Html.DisplayFor(model => model.CriadoEm)
                </td>
            </tr>
        </table>
    </div>
    <div>
        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model?.Id">Editar</a> |
        <a class="btn btn-primary" asp-action="Index">Voltar a Lista</a>
    </div>
