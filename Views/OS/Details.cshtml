@model HelpdeskSystem.ViewModels.OSViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes</h1>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Detalhes das OS: </h3>
    </div>
    <div class="row">
        <div class="col md-6">
            <table id="example1" class="table table-bordered table-striped">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Title)
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.OSDetails.Title)
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.OSDetails.Description)
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.StatusId)
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.OSDetails.Status.Description)
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.PriorityId)
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.OSDetails.Priority.Description)
                    </td>
                </tr>
                <tr>
                    <th>
                        Criado Por: 
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.OSDetails.CreatedBy.FullName)
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.CreatedOn)
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.OSDetails.CreatedOn)
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Attachment)
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.OSDetails.Attachment)
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.SubCategoryId)
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.OSDetails.SubCategory.Name)
                    </td>
                </tr>
            </table>
        </div>
        <div class="col-md-6">
            <h4> Observações de chamados </h4>
            <table id="example1" class="table table-bordered table-striped ">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.OSComment.Description)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.OSComment.CreatedBy)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.OSComment.CreatedOn)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.OSComments)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CreatedBy.FullName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CreatedOn)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <form asp-action="AddComment" method="post" enctype="multipart/form-data">
                <input type="hidden" class="hidden" asp-for="Id" />
                <div class="row mt-3 me-1">
                    <div class="col-12">
                        <label class="control-label">Insira uma observação:</label>
                        <textarea asp-for="OSDescription" class="form-control w-100" rows="4"></textarea>
                        <button class="btn btn-primary mt-3 mb-3">Adicionar Observação</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<div>
    <a class="btn btn-primary" asp-action="Index">Voltar a Lista</a>
</div>
