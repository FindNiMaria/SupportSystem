@model HelpdeskSystem.ViewModels.TicketViewModel

@{
    ViewData["Title"] = "Solicitação de Permissão";
}

<h1>Solicitar Permissão de Acesso</h1>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="CreatePermissionRequest" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="Title" class="control-label"></label>
                        <input asp-for="Title" class="form-control" value="Solicitação de Permissão de Acesso" readonly />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="4" placeholder="Descreva por que precisa de acesso, permissões ou departamento..."></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>

                <!-- Campos ocultos com valores fixos de Categoria, Prioridade e Status -->
                <input type="hidden" asp-for="CategoryId" />
                <input type="hidden" asp-for="PriorityId" />
                <input type="hidden" asp-for="StatusId" />

            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Enviar Solicitação" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
