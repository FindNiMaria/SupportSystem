@model HelpdeskSystem.Models.TicketCategory

@{
    ViewData["Title"] = "Delete";
}



<h2>Apagar Categoria</h2>

<h5>Voce tem certeza que deseja deletar a Categoria?</h5>
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Categoria: </h3>
    </div>
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Code)
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.Code)
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.Name)
                    </td
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.CreatedBy)
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.CreatedBy.FullName)
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.CreatedOn)
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.CreatedOn)
                    </td>    
                </tr>
        </table>
    </div>

    
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Apagar" class="btn btn-danger mt-3 mb-2 ml-1" /> |
        <a asp-action="Index">Voltar a Lista</a>
    </form>
</div>
