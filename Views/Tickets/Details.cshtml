@model HelpdeskSystem.Models.Ticket

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes</h1>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Detalhes do Chamados: </h3>
    </div>
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <tr>           
                <th>
                    @Html.DisplayNameFor(model => model.Titulo)
                </th>
                <td>
                    @Html.DisplayFor(model => model.Titulo)
                </td>

                <th>
                    @Html.DisplayNameFor(model => model.Descricao)
                </th>
                <td>
                    @Html.DisplayFor(model => model.Descricao)
                </td>
            </tr>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.StatusId)
                </th>
                <td>
                    @Html.DisplayFor(model => model.Status.Descricao)
                </td>
            
                <th>
                    @Html.DisplayNameFor(model => model.PrioridadeId)
                </th>
                <td>
                    @Html.DisplayFor(model => model.Prioridade.Descricao)
                </td>
            </tr>
            <tr>
               <th>
                    @Html.DisplayNameFor(model => model.CriadoPor)
                </th>
                <td>
                    @Html.DisplayFor(model => model.CriadoPor.FullName)
                </td>

                <th>
                    @Html.DisplayNameFor(model => model.CriadoEm)
                </th>
                <td>
                    @Html.DisplayFor(model => model.CriadoEm)
                </td>
            </tr>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Anexo)
                </th>
                <td>
                    @Html.DisplayFor(model => model.Anexo)
                </td>
                <th>
                    @Html.DisplayNameFor(model => model.SubCategoryId)
                </th>
                <td>
                    @Html.DisplayFor(model => model.SubCategory.Name)
                </td>
            </tr>
        </table>
    </div>
</div>
<div>
    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model?.Id">Editar</a> |
    <a class="btn btn-primary" asp-action="Index">Voltar a Lista</a>
</div>
