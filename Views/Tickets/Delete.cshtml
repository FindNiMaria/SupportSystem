@model HelpdeskSystem.Models.Ticket

@{
    ViewData["Title"] = "Delete";
}

<h1>Apagar Chamado</h1>

<h3>Voce tem certeza que deseja deletar o chamado?</h3>
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Chamado: </h3>
    </div>
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Titulo)
                </th>
                <td>
                    @Html.DisplayFor(model => model.Titulo)
                </td>

                <th>
                    @Html.DisplayNameFor(model => model.Descricao)
                </th>
                <td>
                    @Html.DisplayFor(model => model.Descricao)
                </td>
            </tr>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <td>
                    @Html.DisplayFor(model => model.Status)
                </td>

                <th>
                    @Html.DisplayNameFor(model => model.Prioridade)
                </th>
                <td>
                    @Html.DisplayFor(model => model.Prioridade)
                </td>
            </tr>
            <tr>
               <th>
                    @Html.DisplayNameFor(model => model.CriadoPor)
                </th>
                <td>
                    @Html.DisplayFor(model => model.CriadoPor.FullName)
                </td>

                <th>
                    @Html.DisplayNameFor(model => model.CriadoEm)
                </th>
                <td>
                    @Html.DisplayFor(model => model.CriadoEm)
                </td>
            </tr>
        </table>
    </div>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar a Lista</a>
    </form>
</div>
