@model HelpdeskSystem.ViewModels.TicketViewModel

@{
    ViewData["Title"] = "Criar Novo Chamado";
}

<h1>Criar Novo</h1>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Titulo" class="control-label"></label>
                        <input asp-for="Titulo" class="form-control" />
                        <span asp-validation-for="Titulo" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Descricao" class="control-label"></label>
                        <input asp-for="Descricao" class="form-control" />
                        <span asp-validation-for="Descricao" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="CategoriaId" class="control-label"></label>
                        <select asp-for="CategoriaId" id="CategoriaId" class="form-control" asp-items="ViewBag.Categorias">
                            <option value="">-- Selecione uma Categoria --</option>
                        </select>
                        <span asp-validation-for="CategoriaId" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="SubCategoriaId" class="control-label"></label>
                        <select asp-for="SubCategoriaId" id="SubCategoriaId" class="form-control">
                            <option value="">-- Selecione uma Subcategoria --</option>
                        </select>
                        <span asp-validation-for="SubCategoriaId" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label>Prioridade</label>
                        <select id="PrioridadeSelect" class="form-control" disabled>
                            <option value="">-- Selecione uma Prioridade --</option>
                        </select>
                        <input type="hidden" asp-for="PrioridadeId" />
                        <span asp-validation-for="PrioridadeId" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar à Lista</a>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <script>
        $('#CategoriaId').change(function () {
            const categoriaId = $(this).val();

            if (categoriaId) {
                // Buscar prioridade da categoria
                $.get('/Data/GetCategoriaPrioridade', { categoriaId: categoriaId }, function (data) {
                    if (data && data.id && data.descricao) {
                        $('#PrioridadeSelect').html(`<option selected>${data.descricao}</option>`);
                        $('input[name="PrioridadeId"]').val(data.id);
                    } else {
                        $('#PrioridadeSelect').html('<option>-- Sem prioridade --</option>');
                        $('input[name="PrioridadeId"]').val('');
                    }
                });

                // Buscar subcategorias da categoria
                $.get('/Data/GetTicketSubCategories', { Id: categoriaId }, function (data) {
                    let options = '<option value="">-- Selecione uma Subcategoria --</option>';
                    $.each(data, function (index, item) {
                        options += `<option value="${item.id}">${item.name}</option>`;
                    });
                    $('#SubCategoriaId').html(options);
                });
            } else {
                $('#PrioridadeSelect').html('<option>-- Selecione uma Prioridade --</option>');
                $('input[name="PrioridadeId"]').val('');
                $('#SubCategoriaId').html('<option>-- Selecione uma Subcategoria --</option>');
            }
        });
    </script>
}
